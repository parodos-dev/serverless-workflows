      "enum": ["./github-actions/", "../../../skeletons/tekton/"],
      "default": "./github-actions/"
    },
    "imageRepository": {
      "title": "Select a registry",
      "type": "string",
      "enum": ["quay-lzh25.apps.cluster-lzh25.sandbox662.opentlc.com", "image-registry.openshift-image-registry.svc:5000"],
      "default": "quay-lzh25.apps.cluster-lzh25.sandbox662.opentlc.com"
    },
    "imageNamespace": {
      "title": "Quay.io Namespace",
      "type": "string",
      "description": "The Quay.io namespace or organization"
    }
  },
  "required": [
    "ciMethod",
    "imageRepository",
    "imageNamespace"
  ]
}