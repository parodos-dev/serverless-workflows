{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "migrationName": {
      "type": "string",
      "pattern": "[a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*"
    },
    "migrationNamespace": {
      "type": "string",
      "pattern": "[a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*"
    },
    "recipients": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(user|group):[a-z0-9]([-a-z0-9]*[a-z0-9])?/([a-z0-9]([-a-z0-9]*[a-z0-9])?)$"
      },
      "minItems": 1
    }
  },
  "required": [
    "migrationName",
    "migrationNamespace",
    "recipients"
  ]
}